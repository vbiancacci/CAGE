<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<gdml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://service-spi.web.cern.ch/service-spi/app/releases/GDML/schema/gdml.xsd">

##########################################

#cylinder_height = cold plate's thickness
#cylinder_inner_radius = cold plate's inner radius
#cylinder_outer_radius = cold plate's outer radius

##########################################

 <define>

  <constant name="HALFPI" value="pi/2."/>
  <constant name="PI" value="1.*pi"/>
  <constant name="TWOPI" value="2.*pi"/>

  <position name="center" x="0" y="0" z="0"/>
  <rotation name="identity" x="0" y="0" z="0" />

  <quantity name="cylinder_height" type="length" value="25.4" unit="mm"/>
  <quantity name="cylinder_inner_radius" type="length" value="0" unit="mm"/>
  <quantity name="cylinder_outer_radius" type="length" value="127" unit="mm"/>

 </define>

##########################################

 <materials>


 </materials>

##########################################

 <solids>

  <cone name="cold_plate" rmin1="cylinder_inner_radius" rmax1="cylinder_outer_radius" rmin2="cylinder_inner_radius" rmax2="cylinder_outer_radius" z="cylinder_height" startphi="0" deltaphi="TWOPI" aunit="rad" />

 </solids>

##########################################

 <structure>

 <volume name="Cold_Plate">
   <materialref ref="G4_Cu"/>
   <solidref ref="cold_plate"/>
  </volume>

 </structure>

##########################################

 <setup name="Default" version="1.0">
  <world ref="Cold_Plate"/>
 </setup>
</gdml>









